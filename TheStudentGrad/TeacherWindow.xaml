<Window x:Class="TheStudentGrad.TeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheStudentGrad"
        mc:Ignorable="d"
        Title="TeacherWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="10">
            <StackPanel Orientation="Horizontal">
                <Label Content="Select Subject"
                       FontSize="20"
                       FontWeight="Bold"/>
                <ComboBox x:Name="cmb_Sub"
                          Width="200"
                          Height="30"
                          FontSize="20" />
                <Button 
                    x:Name="btn_show"
                    Content="Show"
                    Width="80"
                    Margin="20" 
                    Click="Button_Click"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label  Content="Student Score"
                    FontSize="20"/>
            <TextBox
                x:Name="txt_Score"  
                Width="100" 
                Height="30"
                Margin="-390,-30,0,0"/>
            <Label 
                Content="Assigment_Name" 
                FontSize="20" 
                Margin="440,-8,0,43"
                Width="170" Height="40" 
                HorizontalAlignment="Left"/>
            <TextBox
              x:Name="txt_assname"
              Width="150" 
              Height="30"
              Margin="615,2,85,43"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <Button Content="Add" Width="100" Height="30" Margin="20" Click="Button_Click_1"/>
                <Button Content="Delete" Width="100" Height="30" Margin="20" Click="Button_Click_3"/>
                <Button Content="Update" Width="100" Height="30" Margin="20" Click="Button_Click_2"/>
            </StackPanel>
        </Grid>
        <DataGrid 
            AutoGenerateColumns="False"
            IsReadOnly="True"
            x:Name="data_grid"
            Grid.Row="2" SelectionChanged="data_grid_SelectionChanged" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Enrolment_ID" Binding="{Binding EnrollmentIDD}"/>
                <DataGridTextColumn Header="Student_Name" Binding="{Binding StudentName}"/>
                <DataGridTextColumn Header="CourseName" Binding="{Binding CourseName}"/>
                <DataGridTextColumn Header="AssigmentName" Binding="{Binding Assigment}"/>
                <DataGridTextColumn Header="Score" Binding="{Binding Score}"/>
                <DataGridTextColumn Header="MAxscore" Binding="{Binding MaxScore}"/>
                <DataGridTextColumn Header="Average" Binding="{Binding Average}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
