<Window x:Class="TheStudentGrad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheStudentGrad"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label Content="Logn Page" 
                   FontSize="25"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
            </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0"  Orientation="Horizontal">
                <Label Content="Enter User Name"
                       FontSize="20"
                       FontWeight="Bold"/>
                <TextBox
                          x:Name="txt_name"
                        Width="200"
                         Height="30"
                         FontSize="16"/>
            </StackPanel>
            <StackPanel Grid.Row="1"  Orientation="Horizontal">
                <Label Content="Enter User Password"
                       FontSize="20"
                       FontWeight="Bold"/>
                <TextBox  x:Name="txt_Pass"
                         Width="200"
                         Height="30"
                         FontSize="16"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2">
            <Button 
                    IsDefault="True"
                    Content="Login"
                    Width="100"
                    Height="40"
                    FontSize="16"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" Click="Button_Click"/> 
        </Grid>
    </Grid>
</Window>
